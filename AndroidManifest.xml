<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.R3cycleBeta"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Updated ScannerActivity orientation with suppression warning -->
        <activity
            android:name=".ScannerActivity"
            android:screenOrientation="fullSensor"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" />

        <activity android:name=".ResourcesActivity" />
        <activity android:name=".CommunityActivity" />
        <activity android:name=".TermsActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".ReportActivity" />
        <activity android:name=".EncyclopediaActivity" />
        <activity android:name=".EducationActivity" />
        <activity android:name=".ProductDetailsActivity"/>

    </application>

</manifest>
