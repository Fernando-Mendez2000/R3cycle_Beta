<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".CommunityActivity">

    <!-- Title Layout -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/rounded_button_left_sqaured_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="80dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/communityIcon"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/community"
            android:src="@drawable/ic_community" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:text="@string/community"
            android:textColor="@color/dark_blue"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- About Us Button -->
    <Button
        android:id="@+id/aboutusButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_with_border"
        android:drawableEnd="@drawable/next_page"
        android:drawablePadding="8dp"
        android:padding="20dp"
        android:text="@string/about_us_button"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Report Bugs Button -->
    <Button
        android:id="@+id/reportBugsButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_with_border"
        android:drawableEnd="@drawable/next_page"
        android:drawablePadding="8dp"
        android:padding="20dp"
        android:text="@string/report_bugs"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/aboutusButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rate This App Button -->
    <Button
        android:id="@+id/ratethisappButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_with_border"
        android:drawableEnd="@drawable/next_page"
        android:drawablePadding="8dp"
        android:padding="20dp"
        android:text="@string/rate_this_app"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/reportBugsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Home Button -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_with_border"
        android:text="@string/home"
        app:layout_constraintTop_toBottomOf="@+id/ratethisappButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Bottom Light Green Bar -->
    <LinearLayout
        android:id="@+id/bottomLightGreenBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="0dp"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Dark Green Bar -->
    <LinearLayout
        android:id="@+id/bottomDarkBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="0dp"
        android:background="@color/dark_green"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottomLightGreenBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
