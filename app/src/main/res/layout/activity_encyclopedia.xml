<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/light_green">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/rounded_button_left_sqaured_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="80dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/communityIcon"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/encyclopedia"
            android:src="@drawable/book" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:text="@string/encyclopedia"
            android:textColor="@color/dark_blue"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topDarkBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/dark_green"
        android:layout_margin="0dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/topLightGreenBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/green"
        android:layout_margin="0dp"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_green">


        <TextView
            android:id="@+id/titleR3cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/r3cycle"
            android:textColor="@color/dark_blue"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/paperButton"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_with_border"
            android:drawableEnd="@drawable/ic_next_icon"
            android:text="@string/paper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleR3cycle" />

        <Button
            android:id="@+id/cardboardButton"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_with_border"
            android:drawableEnd="@drawable/ic_next_icon"
            android:text="@string/cardboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paperButton" />

        <Button
            android:id="@+id/glassButton"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_with_border"
            android:drawableEnd="@drawable/ic_next_icon"
            android:text="@string/glass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardboardButton"  android:layout_width="0.0dp"/>


        <Button
            android:id="@+id/plasticsButton"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_with_border"
            android:drawableEnd="@drawable/ic_next_icon"
            android:text="@string/plastics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/glassButton" />

        <Button
            android:id="@+id/metalButton"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_with_border"
            android:drawableEnd="@drawable/ic_next_icon"
            android:text="@string/metal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plasticsButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomLightGreenBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/green"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/bottomDarkBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/dark_green"
        android:orientation="horizontal" />
</LinearLayout>
